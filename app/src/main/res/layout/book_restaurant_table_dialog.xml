<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:weightSum="10">
        <ImageView
            android:id="@+id/img_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_bookmark_white_24dp"/>
        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Reserve Table"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="6"/>

        <TextView
            android:id="@+id/txt_submit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="SUBMIT"
            android:textSize="14sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/button_border_rec"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="2dp"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_cancel_white_24dp"
            android:layout_weight="1"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="5dp">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_noOfPeople"
                android:layout_width="match_parent"
                android:hint="No. of people"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                app:fontFamily="@font/visby_round_cf_bold"
                android:textColor="@color/black"
                android:inputType="number"
                android:layout_marginLeft="15dp"
                app:met_baseColor="@color/black"
                app:met_floatingLabel="highlight"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                app:met_primaryColor="@color/black"
                app:met_singleLineEllipsis="true"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="5dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_date"
                android:layout_width="match_parent"
                android:hint="Date (YYYY-MM-DD)"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:visibility="visible"
                android:focusable="false"
                app:fontFamily="@font/visby_round_cf_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                app:met_baseColor="@color/black"
                app:met_floatingLabel="highlight"
                android:textSize="16sp"
                android:inputType="date"
                android:layout_marginRight="15dp"
                app:met_primaryColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_time"
                android:layout_width="match_parent"
                android:hint="Time "
                android:textColorHint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:fontFamily="@font/visby_round_cf_bold"
                android:textColor="@color/black"
                android:inputType="number"
                android:focusable="false"
                app:met_baseColor="@color/black"
                app:met_floatingLabel="highlight"
                android:textSize="16sp"
                app:met_primaryColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>